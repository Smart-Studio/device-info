<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.smartstudio.deviceinfo.ui.VerticalLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <com.smartstudio.deviceinfo.ui.PropertyLayout
            android:id="@+id/view_battery_level"
            style="@style/Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/battery_level" />

        <com.smartstudio.deviceinfo.ui.PropertyLayout
            android:id="@+id/view_battery_health"
            style="@style/Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/battery_health" />

        <com.smartstudio.deviceinfo.ui.PropertyLayout
            android:id="@+id/view_battery_source"
            style="@style/Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/battery_source" />

        <com.smartstudio.deviceinfo.ui.PropertyLayout
            android:id="@+id/view_battery_status"
            style="@style/Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/battery_status" />

        <com.smartstudio.deviceinfo.ui.PropertyLayout
            android:id="@+id/view_battery_capacity"
            style="@style/Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/battery_capacity" />

        <com.smartstudio.deviceinfo.ui.PropertyLayout
            android:id="@+id/view_battery_type"
            style="@style/Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/battery_type" />

        <com.smartstudio.deviceinfo.ui.PropertyLayout
            android:id="@+id/view_battery_temperature"
            style="@style/Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/battery_temperature" />

        <com.smartstudio.deviceinfo.ui.PropertyLayout
            android:id="@+id/view_battery_voltage"
            style="@style/Property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text="@string/battery_voltage" />

    </com.smartstudio.deviceinfo.ui.VerticalLayout>

</ScrollView>